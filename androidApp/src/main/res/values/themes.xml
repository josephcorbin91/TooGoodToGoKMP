<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Tgtg" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.Tgtg" parent="NightAdjusted.Theme.Tgtg">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.Tgtg" parent="PlatformAdjusted.Theme.Tgtg" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>
    <style name="Theme.Tgtg.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/tgtg</item>
        <item name="postSplashScreenTheme">@style/Theme.Tgtg</item>
    </style>

</resources>
